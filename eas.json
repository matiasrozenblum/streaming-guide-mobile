{
    "cli": {
        "version": ">= 12.5.2",
        "appVersionSource": "remote"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "env": {
                "APP_VARIANT": "development"
            }
        },
        "preview": {
            "distribution": "internal",
            "env": {
                "APP_VARIANT": "staging"
            }
        },
        "preview-simulator": {
            "extends": "preview",
            "ios": {
                "simulator": true
            }
        },
        "staging-testflight": {
            "autoIncrement": true,
            "env": {
                "APP_VARIANT": "staging"
            }
        },
        "production": {
            "env": {
                "APP_VARIANT": "production"
            }
        },
        "production-apk": {
            "extends": "production",
            "android": {
                "buildType": "apk"
            }
        }
    },
    "submit": {
        "staging-testflight": {},
        "production": {}
    }
}