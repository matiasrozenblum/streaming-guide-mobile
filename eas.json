{
    "cli": {
        "version": ">= 12.5.2"
    },
    "build": {
        "development": {
            "developmentClient": true,
            "distribution": "internal",
            "env": {
                "APP_VARIANT": "development"
            }
        },
        "preview": {
            "distribution": "internal",
            "env": {
                "APP_VARIANT": "staging"
            }
        },
        "production": {
            "env": {
                "APP_VARIANT": "production"
            }
        },
        "production-apk": {
            "extends": "production",
            "android": {
                "buildType": "apk"
            }
        }
    },
    "submit": {
        "production": {}
    }
}